@using HtmlHelperDemo.Models
@model IEnumerable<HtmlHelperDemo.Models.User>

@{
    ViewBag.Title = "UserDetailsT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserDetailsT</h2>

<p>
    @Html.ActionLink("Create New", "SignUpT")
</p>
<p>
    @Html.ActionLink("View Temp Data", "GetTempData")
</p>
<h1>@ViewData["datetime"]</h1>
<table class="table">
    <tr>
        <th>
            @*fetch property name*@
            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in (IEnumerable<User>)ViewData["userinfo"]) {
    <tr>
        <td>
            @*retrieve the property value*@
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.userid }) |
            @Html.ActionLink("Details", "Details", new { id=item.userid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.userid })
        </td>
    </tr>
}

</table>
<hr/>
<h1>ViewBag</h1>
<table class="table">
    <tr>
        <th>
            @*fetch property name*@
            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.userinfo)
    {
        <tr>
            <td>
                @*retrieve the property value*@
                @item.username
            </td>
            <td>
                @item.password
            </td>
            <td>
                @item.email
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.userid }) |
                @Html.ActionLink("Details", "Details", new { id = item.userid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.userid })
            </td>
        </tr>
    }

</table>
